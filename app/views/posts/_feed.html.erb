<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img class="is-rounded" src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">

    </div>
  </article>


  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Niko B</strong>
            <small>@nikob</small><br />
            <strong class="is-size-3"><%= post.title %></strong>
            <% if post.body.length > 200 %>
              <p><%= post.body[0..200] %>... <br /><%= link_to "Read more", post %></p>
            <% else %>
              <p><%= post.body %></p>
            <% end %>
          </div>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to post, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link"></i></span>
            <% end %>
            <%= link_to edit_post_path(post), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil"></i></span>
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this secret?" } do %>
              <span class="icon"><i class="fa fa-trash"></i></span>
            <% end %>
          </div>
        </nav>
      </article>
    </div>
  <% end %>
</div>