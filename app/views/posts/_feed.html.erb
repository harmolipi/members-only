<div class="column is-three-quarters">
  <% if user_signed_in? %>
    <article class="media box">
      <div class="media-content">
        <%= render "posts/form" %>
      </div>
    </article>
  <% end %>

  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <% if user_signed_in? %>
              <strong><%= post.user.username %></strong><br />
            <% end %>
            <strong class="is-size-3"><%= link_to post.title, post %></strong>
            <p><%= truncate(post.body, length: 200, separator: ' ') %></p>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>