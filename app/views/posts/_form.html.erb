
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  wrapper: false,
                  input_html: { class: "input", type: "text" },
                  label_html: { class: "label" },
                  placeholder: "My super secret secret",
                  label: "Title" %>  
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body,
      required: true,
      wrapper: false,
      input_html: { class: "textarea" },
      label_html: { class: "label" },
      placeholder: "So this one time...",
      label: "Secret" %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>
