<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="box">
          <article class="media">
            <div class="media-content">
              <div class="content">
                <% if user_signed_in? %>
                  <strong><%= @post.user.username %></strong><br />
                <% end %>
                <strong class="is-size-3"><%= @post.title %></strong>
                <p><%= @post.body %></p>
              </div>
            </div>
          </article>
        </div>
        

        <%= link_to 'Back', posts_path %>
      </div>
    </div>
  </div>
</div>


