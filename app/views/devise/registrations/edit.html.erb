<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Edit <%= resource_name.to_s.humanize(capitalize: false) %></h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <div class="control">
                <%= f.input :email,
                        required: true,
                        autofocus: true,
                        wrapper: false,
                        input_html: { autocomplete: "email", type: "email", class: "input" },
                        label_html: { class: "label" } %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <div class="field">
              <div class="control">
                <%= f.input :username,
                        required: true,
                        autofocus: true,
                        wrapper: false,
                        input_html: { autocomplete: "username", type: "username", class: "input" },
                        label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password,
                        hint: "leave blank if you don't want to change your password",
                        required: false,
                        wrapper: false,
                        input_html: { autocomplete: "new-password", type: "password", class: "input" },
                        label_html: { class: "label" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation,
                        required: false,
                        wrapper: false,
                        input_html: { autocomplete: "new-password", type: "password", class: "input" },
                        label_html: { class: "label" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        wrapper: false,
                        input_html: { autocomplete: "current-password", type: "password", class: "input" },
                        label_html: { class: "label" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Update", class: "button is-info is-medium" %>
              </div>
            </div>
          <% end %>
          <hr>
          <h3>Cancel my account</h3>
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>